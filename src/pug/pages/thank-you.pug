extends ../template.pug

block content
  .section.homepage-hero.thank-you.min-80vh
    iframe( 
      class="dn"
      src="https://player.vimeo.com/video/71466423?background=1&muted=1" 
      frameborder="0" 
      autoplay="1"
      muted
      allow="autoplay; fullscreen" 
      allowfullscreen>
    )
    img(
      class="bg-image-1"
      src="images/geco-thank-you.jpg"
    )
    .overlay.absolute.top-0.left-0
    .content(data-aos="fade")
      img(
        class="logo"
        src="images/divinitree-logo.png"
      )
      h1 Thank you
      h2 and see you soon
      img(
        class="wordmark"
        src="images/divinitree-wordmark.png"
      )
  .section
    a(
      href="https://www.google.com/maps/place/Divinitree+Yoga+Studio+-+Santa+Barbara/@34.4202497,-119.6992628,18.34z/data=!4m5!3m4!1s0x80e91478d6916af7:0x282eacd9422713fc!8m2!3d34.4205812!4d-119.6989214?hl=en-US"
      target="_blank"
    )
    img(
      class="rounded center"
      src="images/map-screenshot.png"
    )
    .vcard(
      class="tc"
      itemscope
      itemtype="http://schema.org/Organization"
    )
      .org(itemprop="name") Divinitree Santa Barbara
      address(
        itemprop="address"
        itemscope
        itemtype="http://schema.org/PostalAddress"
      )
        .street-address(itemprop="streetAddress") 25 East De La Guerra Street
        .street-address-details
          span.locality(itemprop="addressLocality") Santa Barbara,&nbsp;
          span.region(itemprop="addressRegion") CA&nbsp;
          span.postal-code(itemprop="postalCode") 93101
      .tel(itemprop="telephone") 805-897-3354
      a.email(
        href="mailto:email@divinitreesantabarbara.com"
        itemprop="email"
      ) Send us an email
  .
